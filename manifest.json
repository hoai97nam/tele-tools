{
"update_url": "https://clients2.google.com/service/update2/crx",

	"manifest_version": 2,
	"name": "BulkTele - Mass Invite + Message for Telegram",
	"short_name": "BulkTele",
	"description": "Mass invite, bulk message and scrape groups automatically on Telegram!",
	"version": "1.1.7",
	"icons": {
		"128": "icon_128.png",
		"48": "icon_48.png",
		"16": "icon_16.png"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "interface.html",
		"default_title": "BulkTele"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"notifications",
		"storage",
		"unlimitedStorage",
		"https://*.web.telegram.org/*",
		"http://*.web.telegram.org/*",
		"https://boostextensions.com/bulktele/emailverify.php",
		"https://boostextensions.com/bulktele/sendmanagesubemail.php",
		"https://boostextensions.com/bulktele/sendlogincode.php",
		"https://boostextensions.com/bulktele/logincodeverify.php"
	]
}